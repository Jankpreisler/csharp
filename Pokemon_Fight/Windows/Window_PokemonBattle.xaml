<Window x:Class="Pokemon_Fight.Windows.Window_PokemonBattle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokemon_Fight.Windows"
        mc:Ignorable="d"
        Title="Window_PokemonBattle" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Image Margin="601,138,33,138" Source="/images/eevee.png" Stretch="Fill"/>
        <Image Margin="45,150,597,125" Source="/images/pokemon_PNG9.png" Stretch="Fill"/>
        <ProgressBar Name="ProgressBar_Pokemon1_HP" HorizontalAlignment="Left" Height="34" Margin="45,58,0,0" VerticalAlignment="Top" Width="188" Background="Black" Foreground="#FF00FF2F"/>
        <Label Name="label_Pokemon_1HP" Content="x/x" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="67,118,0,0" VerticalAlignment="Top" Height="27" Width="114"/>
        <ProgressBar Name="ProgressBar_Pokemon_2HP"  HorizontalAlignment="Left" Height="34" Margin="576,58,0,0" VerticalAlignment="Top" Width="179" Foreground="#FF05FF33" Background="#FF0A0909"/>
        <Label Name="label_Pokemon_2HP" Content="x/x" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="634,114,0,0" VerticalAlignment="Top" Height="27" Width="100"/>
        <Button Content="Light Attack" HorizontalAlignment="Left" Margin="30,327,0,0" VerticalAlignment="Top" Height="35" Width="94" Click="Button_Click"/>
        <Button Content="Light Attack Medium" HorizontalAlignment="Left" Margin="139,327,0,0" VerticalAlignment="Top" Height="35" Width="109" Click="Button_Click_1"/>
        <Button Content="Bolt Attack" HorizontalAlignment="Left" Margin="31,367,0,0" VerticalAlignment="Top" Height="36" Width="92" Click="Button_Click_2"/>

    </Grid>
</Window>
